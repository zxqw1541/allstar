<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="allstar.pms.dao.BoardDao">

  <resultMap type="board" id="boardMap">
    <id 		column="bno" 		property="bno"/>
  </resultMap>

  <select id="selectList" resultMap="boardMap" parameterType="map">
    select 
      bno,
      bevent,
      title,
      cre_dt 
    from board
    order by 
    <choose>
      <when test="keyword == 'bevent'">bevent </when>
      <when test="keyword == 'title'">title </when>
      <otherwise>bno </otherwise>
    </choose>
    <choose>
      <when test="align == 'asc'">asc</when>
      <otherwise>desc</otherwise>
    </choose>
    limit #{startIndex}, #{length}
  </select>
  
  <insert id="insert" parameterType="board">
    insert into board(bevent,title,content,cre_dt) 
    values(#{bevent},#{title},#{content},now())
  </insert>
  
  <delete id="delete" parameterType="int">
    delete from board 
  	where bno=#{bno}
  </delete>
  
  <update id="update" parameterType="board">
    update board set
      bevent=#{bevent}, 
      title=#{title},
      content=#{content},
      cre_dt=now()
    where bno=#{bno}
  </update>
  
  <select id="selectOne" resultMap="boardMap" parameterType="int">
    select 
      bno,
      bevent,
      title,
  	  content,
      cre_dt
    from board
    where bno=#{bno}
  </select>
</mapper>






