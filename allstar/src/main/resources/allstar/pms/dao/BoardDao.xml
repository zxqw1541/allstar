<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="allstar.pms.dao.BoardDao">

  <resultMap type="board" id="boardMap">
    <id 		column="bno" 		  property="no"/>
    <result column="eno"      property="eno"/>
    <result column="mno"      property="mno"/>
    <result column="title"    property="title"/>
    <result column="content"  property="content"/>
    <result column="cre_dt"   property="createDate"/>
    <result column="views"    property="views"/>
  </resultMap>
  
  <sql id="select_inc">
    select bno, eno, mno, title, content, cre_dt, views
  </sql>
  <select id="selectList" resultMap="boardMap" parameterType="map">
    <include refid="select_inc"/>
    from board
    order by 
    <choose>
      <when test="keyword == 'eno'">eno </when>
      <when test="keyword == 'title'">title </when>
      <otherwise>bno </otherwise>
    </choose>
    <choose>
      <when test="align == 'asc'">asc</when>
      <otherwise>desc</otherwise>
    </choose>
    limit #{startIndex}, #{length}
  </select>
  
  <insert id="insert" parameterType="board">
    insert into board(eno,mno,title,content,cre_dt) 
    values(#{eno},#{mno},#{content},#{content},now())
  </insert>
  
  <delete id="delete" parameterType="int">
    delete from board 
  	where bno=#{no}
  </delete>
  
  <update id="update" parameterType="board">
    update board set
      eno = #{eno},
      mno = #{mno},
      title = #{content},
      content = #{content},
      cre_dt = now()
    where bno=#{no}
  </update>
  
  <select id="selectOne" resultMap="boardMap" parameterType="int">
    <include refid="select_inc"/>
    from board
    where bno=#{no}
  </select>
</mapper>






